    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "prettier": "2.3.2",
    "storybook-builder-vite": "^0.0.12",
    "ts-jest": "^27.0.4",
    "vite": "^2.4.3",
    "vite-tsconfig-paths": "^3.3.13"
  },
  "lint-staged": {
    "*.{json,js,ts,tsx}": [
      "prettier --ignore-unknown --no-error-on-unmatched-pattern"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ]
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "eslint:check": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepare": "husky install",
    "prettier:check": "prettier --ignore-unknown --no-error-on-unmatched-pattern .",
    "prettier:fmt": "prettier --write .",
    "serve": "vite preview",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  }
}
